<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.jscboy.alienblaster.SignupActivity"
    android:background="#1e1e1e">

    <TextView
        android:text="Username"
        android:id="@+id/txtUser"
        android:layout_width="wrap_content"
        android:textSize="20sp"
        android:layout_height="wrap_content"
        android:textColor="#329e91" />

    <EditText
        android:id="@+id/username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtUser"
        android:inputType="text"
        android:hint=" Required"
        android:textColor="#7d7d7d"
        android:textColorHint="#7d7d7d"
        android:drawableLeft="@drawable/usericon"/>

    <TextView
        android:text="Password"
        android:id="@+id/txtPassword"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/username"
        android:textColor="#329e91" />

    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtPassword"
        android:inputType="textPassword"
        android:hint=" Required"
        android:textColor="#7d7d7d"
        android:textColorHint="#7d7d7d"
        android:drawableLeft="@drawable/passicon"/>

    <TextView
        android:text="Email Address"
        android:id="@+id/txtemail"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/password"
        android:textColor="#329e91" />

    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtemail"
        android:inputType="textEmailAddress"
        android:hint=" Optional"
        android:textColor="#7d7d7d"
        android:textColorHint="#7d7d7d"
        android:drawableLeft="@drawable/emailicon"/>


    <Button
        android:id="@+id/signup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/email"
        android:text="Signup"
        android:onClick="signupMethod"
        android:background="#329e91"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/returnButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/signup"
        android:text="Return to Login"
        android:onClick="returnMethod"
        android:background="#329e91"
        android:layout_marginTop="20dp"
        android:textColor="#ffffff" />

</RelativeLayout>
